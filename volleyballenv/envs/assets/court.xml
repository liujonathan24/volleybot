<mujoco>
  
  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1=".7 .8 .9" rgb2=".8 .9 1.0" width="512" height="512" mark="none"/>
    <material name="grid" texture="grid" texrepeat="50 50" texuniform="true" reflectance=".2"/>
	    
    <texture name="skybox" type="skybox" builtin="gradient" rgb1="0.4 0.6 1" rgb2="0.1 0.3 0.8" width="512" height="512"/>
    
    <material name="net_material" rgba=".8 .8 .8 1" shininess="0.1"/>
    <material name="pole_material" rgba=".5 .5 .5 1" shininess="0.2"/>

    <!-- Car assets -->
    <mesh name="base" file="base.stl" />
    <mesh name="frontleft_wheel" file="frontleft_wheel.stl" />
    <mesh name="frontright_wheel" file="frontright_wheel.stl"/>
    <mesh name="backleft_wheel" file="backleft_wheel.stl" />
    <mesh name="backright_wheel" file="backright_wheel.stl"/>
    <material name="red" rgba="0.8 0.1 0.1 1"/>
    <material name="blue" rgba="0.1 0.1 0.8 1"/>
  </asset>

  <worldbody>
    <light name="light" pos="0 0 1"/>
    <geom name="floor" type="plane" pos="0 0 0" size=".25 .5 .1" rgba="1 1 1 1" solref="0.02 0.3" friction="3 0.005 0.0001" material="grid"/>
    <camera name="fixed" pos="1 0 .25" xyaxes=".75 0 0 0 .05 .95"/>

    <body name="ball" pos="0 0.25 0.2">
      <include file="ball.xml"/>
    </body>  

    <body name="robot" pos="0 -0.45 0.00506246">
	    <include file="robot.xml"/>
    </body>

    <include file="net.xml"/>

  </worldbody>

<!-- Robot controls -->
  <actuator>
      <velocity name="left_motor" joint="joint_frontleft_wheel" gear="0.01" ctrlrange="-1 1" ctrllimited="true" kv="5"/>
      <velocity name="right_motor" joint="joint_frontright_wheel" gear="0.01" ctrlrange="-1 1" ctrllimited="true" kv="2"/>
  </actuator>

</mujoco>
